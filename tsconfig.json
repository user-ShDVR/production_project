{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      // для поддержки default import либами
      "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
}